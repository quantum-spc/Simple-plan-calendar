<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shop.qtmspc.mapper.UserMapper">
    <select id="findByMemberid" parameterType="shop.qtmspc.entity.User" resultType="shop.qtmspc.entity.User">
        SELECT * FROM plan_user WHERE delflag = 'N' AND memberid = #{memberid}
    </select>

    <select id="updateUserLastLoginDate" parameterType="shop.qtmspc.entity.User">
        UPDATE plan_user SET last_login_date = now() WHERE delflag = 'N' AND memberid = #{memberid}
    </select>
</mapper>